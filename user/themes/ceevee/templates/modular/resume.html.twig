<section id="resume">
    {% for section in page.header.sections %}
    <div class="row {{ section.css_class }}">
        <div class="three columns header-col">
            <h1><span>{{ section.title }}</span></h1>
        </div>
        <div class="nine columns main-col">
            {% for item in section.items %}
            <div class="row item">
                <div class="twelve columns">
                    {% if item.title %}
                    <h3>{{ item.title }}</h3>
                    {% endif %}
                    {% if item.info or item.date %}
                    <p class="info">{{ item.info }} <span>&bull;</span> {% if item.grade %} <span class="grade">{{ item.grade }}</span> <span>&bull;</span>{% endif %} <em class="date">{{ item.date }}</em>{% if item.location %}<span>&bull;</span> <span class="location"><i class="fa fa-map-marker"></i> {{ item.location }}</span>{% endif %}</p>
                    {% endif %}
                    <p>
                        {{ item.description }}
                    </p>
                    {% if item.modules %}
                        
                        <p class="module-list"><i class="fa fa-graduation-cap"></i> 
                        {% for module in item.modules %}
                            <span class="module">{{ module }}</span> 
                        {% endfor %}
                        </p>
                    
                    {% endif %}

                    {% if item.skills %}
                    <div class="bars">
                        <ul class="skills">
                            {% for skill in item.skills %}
                            <li><span class="bar-expand" style="width: {{ skill.level }}%;"></span><em>{{ skill.name }}</em></li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endif %}

                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endfor %}
</section>
